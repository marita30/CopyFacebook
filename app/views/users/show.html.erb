<h1>Welcome to my profile</h1>
<br>
<div class="wrapper">
    <div class="box">
        <div class="column justify-content-center" id="main">
            <div class="padding">
                <div class="full">
                    <div class="row">
                        <div class="col-sm-5">
                            <%= image_tag @user.image, :class => "rounded mx-auto d-block img-fluid img-thumbnail" if @user.image.attached? %>
                            <br>
                            <h4 class="center"><%= @user.name %></h4>
                            <h5 class="center"><%= @user.email %></h5>
                        </div>
                        <div class="col-sm-7">
                            <div class="well">
                                <div class="panel panel-default">
                                    <div class="panel-heading justify-content-center text-center">
                                        <h3>your posts</h3>
                                    </div>
                                </div>
                                <% @posts.each do |post| %>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4><%= post.title %></h4>
                                        <h5><%= post.name%></h5>
                                    </div>
                                    <div class="panel-body content">
                                        <p class="text-content"><%= post.content%></p>
                                        <div class="card-footer text-muted">
                                            <div class="row">
                                                <div class="col">
                                                    <a href="#" id="like" class=""><i id="thumb" class="fa fa-thumbs-up icon-color" aria-hidden="true"></i> Me Gusta <small class="text-muted"></small></a>
                                                </div>
                                                <div class="col"><a style="text-decoration:none;" class="text-muted"
                                                        data-toggle="collapse" href="#collapseExample1"
                                                        aria-expanded="false" aria-controls="collapseExample"><i
                                                            class="fa fa-comment-o" aria-hidden="true"></i> Comentar
                                                        <small class="text-muted"></small></a>
                                                </div>
                                                <div class="col dropup">
                                                    <a href="#" class="dropdown-toggle text-muted"
                                                        data-toggle="dropdown" aria-haspopup="true"
                                                        aria-expanded="false" style="text-decoration:none;"><i
                                                            class="fa fa-share-square-o" aria-hidden="true"></i>
                                                        Compartir</a>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="#">Compartir Publico</a>
                                                        <a class="dropdown-item" href="#" id="a" data-toggle="modal"
                                                            data-target="#exampleModal">Compartir</a>
                                                        <div class="dropdown-divider"></div>
                                                        <a class="dropdown-item" href="#" id="a1" data-toggle="modal"
                                                            data-target="#exampleModal">Compartir con Amigos</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    <% end %>
                                

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
